    </svg>
  </div>
  
  <div class="section-about">
    <div class="container">
      <div class="container-wrapper">
        <div class="content">
          <h2><%= t('.about') %></h2>
          <p><%= t('.about-html') %></p>
          <h5><%= t('.work-first') %> <%= link_to "Grupo de Moda Soma", "https://www.somagrupo.com.br/", target: "_blank", class: "without-decoration" %> <%= t('.work-second') %> </h5>
        </div>
        <div class="profile">
          <%= image_tag 'profile_wht_bgrnd.png', class:"d-print-none"%>
        </div>
      </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
