<div class="container-page">

  <div class="navbar d-flex justify-content-end">
    <%= render 'shared/navbar' %>
  </div>

  <div class="upper-wave">
    <div class="banner-languages">
      <% @languages.each do |language, sym| %>
        <%= link_to root_path(locale: sym), class: "without-decoration" do %>
          <div class="icon-flag">
            <%= image_tag "#{language}.png" %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div id="particles-js" class="banner"></div>
    <div class="container banner-presentation">
      <p> <%= t('.presentation') %></p> 
    </div>
    <div class="container banner-name">
      <h1>Will The<span style="color:#61b15a">ard</span></h1>
    </div>
    <div class="container banner-about-me">
      <p>
        <%= t('.about-me') %>
      </p>
    </div>
    <div class="banner-job">
      <h2><%= t('.banner-job') %> </h2>
    </div>
    <div class="banner-location">
      <p>
        <%= t('.location') %>
      </p> 
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
